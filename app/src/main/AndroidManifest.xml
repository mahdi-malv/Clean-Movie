<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.malv.cleanmovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CMApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CleanMovies"
        tools:ignore="AllowBackup">
        <activity
            android:name="ir.malv.cleanmovies.ui.screens.preload.PreloadActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CleanMovies.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.screens.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CleanMovies.NoActionBar"/>
    </application>

</manifest>